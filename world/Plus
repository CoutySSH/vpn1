echo -ne "\e[01;37m##\033[1;32m DESEJA CONTINUAR?\033[1;33m [s/n]:\033[1;37m "; read resposta
    if [[ "$resposta" = 's' ]]; then clear
else clear
echo -n "SAINDO "
for((i=0; i<12; i++));
do
echo -ne "\e[01;31m#\e[00m"
sleep 0.1s	
done
clear 
