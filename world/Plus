fi
#
echo -ne "\e[01;37m ## \e[01;36mDIGITE A KEY?\e[00m "; read chave 

wget get 165.227.130.18/scripts/Plus > /dev/null 2>&1
#
if [[ $? = 0 ]]; then
clear
